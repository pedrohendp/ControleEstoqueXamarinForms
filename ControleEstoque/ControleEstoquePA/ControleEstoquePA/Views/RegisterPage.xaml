<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ControleEstoquePA.Views.RegisterPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">

            <Label
                Margin="0,0,0,20"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Registro" />

            <Entry Placeholder="Nome" />

            <Entry Placeholder="Sobrenome" />

            <Entry Keyboard="Email" Placeholder="E-mail" />

            <Entry IsPassword="True" Placeholder="Senha" />

            <Entry IsPassword="True" Placeholder="Confirme sua senha" />

            <Button
                Margin="0,20,0,0"
                Clicked="OnRegisterButtonClicked"
                Text="Registrar" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>